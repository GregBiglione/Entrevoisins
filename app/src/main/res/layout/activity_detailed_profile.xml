<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.neighbour_list.DetailedProfile">

    <!-- Image principale -->
    <ImageView
        android:id="@+id/item_list_avatar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/avatar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/star_button"
        app:layout_anchorGravity="top"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:textColor="#fff"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/back_arrow_button"
        style="@style/floatingButton_style"
        android:backgroundTint="@color/transparent"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/star_button"
        style="@style/floatingButton_style"
        android:backgroundTint="@color/colorBackgroundStar"
        app:borderWidth="0dp"
        android:layout_marginEnd="16dp"
        app:layout_anchor="@+id/item_list_avatar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_star_border_white_24dp" />



    <!-- Cardview infos -->
    <LinearLayout
        style="@style/mainLinearLayout_style"
        app:layout_anchor="@+id/item_list_avatar"
        app:layout_anchorGravity="bottom">

        <android.support.v7.widget.CardView
            android:id="@+id/info_container"
            style="@style/cardView_style"
            app:layout_anchor="@+id/star_button"
            app:layout_anchorGravity="bottom"
            app:cardCornerRadius="5dp">

            <LinearLayout
                style="@style/cardViewMainLinearLayout_style">

                <TextView
                    android:id="@+id/firstname"
                    style="@style/texViewTitle_style"/>

                <View
                    style="@style/horizontalLine_style"/>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_place_pink_24dp" />

                    <TextView
                        android:id="@+id/address"
                        style="@style/itemTextView_style"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_phone_pink_24dp" />

                    <TextView
                        android:id="@+id/phoneNumber"
                       style="@style/itemTextView_style"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_facebook_pink_24dp" />

                    <TextView
                        android:id="@+id/facebook"
                        style="@style/itemTextView_style"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>



    <!-- Cardview Ã  propos -->
    <LinearLayout
        style="@style/mainLinearLayout_style"
        app:layout_anchor="@+id/info_container"
        app:layout_anchorGravity="bottom">

        <android.support.v7.widget.CardView
            android:id="@+id/about_container"
            style="@style/cardView_style">

            <LinearLayout
                style="@style/cardViewMainLinearLayout_style">


                <TextView
                    android:id="@+id/about_title"
                    style="@style/texViewTitle_style"/>

                <View
                    style="@style/horizontalLine_style"/>

                <TextView
                    android:id="@+id/about_text"
                    style="@style/texViewParagraph_style"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>