<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailedProfile"
    tools:showIn="@layout/activity_detailed_profile"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cardview infos -->
        <android.support.v7.widget.CardView
            style="@style/cardView_style"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/info_linear_layout"
                style="@style/layout_vertical_style">

                <TextView
                    android:id="@+id/firstName"
                    style="@style/textViewTitle_style"/>

                <View
                    style="@style/horizontalLine_style"/>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_place_pink_24dp" />

                    <TextView
                        android:id="@+id/address"
                        style="@style/itemTextView_style"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_phone_pink_24dp" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        style="@style/itemTextView_style"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/itemLinearLayout_style">

                    <ImageView
                        style="@style/imageView_style"
                        app:srcCompat="@drawable/ic_facebook_pink_24dp" />

                    <TextView
                        android:id="@+id/facebook"
                        style="@style/itemTextView_style"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Cardview infos -->
        <android.support.v7.widget.CardView
            style="@style/cardView_style"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/about_linear_layout"
                style="@style/layout_vertical_style">

                <TextView
                    android:id="@+id/about_title"
                    style="@style/textViewTitle_style"/>

                <View
                    style="@style/horizontalLine_style"/>

                <TextView
                    android:id="@+id/about_text"
                    style="@style/texViewParagraph_style"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>